<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="UWI Peer Sales"
        android:id="@+id/main_heading"
        android:layout_below="@+id/main_img"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enabling Empowerment Through Sales"
        android:id="@+id/main_subheading"
        android:layout_below="@+id/main_heading"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/main_img"
        android:src="@drawable/tick"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/main_heading"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Items"
        android:id="@+id/btn_view"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="View Cart"
        android:id="@+id/btn_cart"
        android:layout_below="@+id/btn_view"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>